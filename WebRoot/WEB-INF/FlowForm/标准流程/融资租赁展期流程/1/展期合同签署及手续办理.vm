						isblEdit:true,
						isSignHidden : false,
						isqsEdit : true,
						isfwEdit : true
					})
				]
			}, {
				xtype : 'fieldset',
				title :'展期协议书',
				collapsible : true,
				autoHeight : true,
				items : [new SlContractView({
					projectId :this.leaseFinanceProjectId,
	      			businessType:this.baseBusinessType,
			    	htType : 'leaseFinanceZQHT',
			    	HTLX : 'leaseFinanceZQHT',
			    	isHiddenAddBtn : false,
					isHiddenEdiBtn : false,
					isHiddenDelBtn : false,
					isHidden:false,
					isSignHidden : false,
					isqsEdit : true
				})]
			}, {
				xtype : 'hidden',
        		name : 'safeLevel',
        		value : 1
			},{
			     xtype:'hidden',
			     name:'task_id',
			     value:this.taskId
