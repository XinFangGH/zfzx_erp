<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class
        name="com.zhiwei.credit.model.system.SystemWord"
        table="system_word"
        select-before-update="false"
        dynamic-update="false"
        dynamic-insert="false"
        optimistic-lock="version"
    >
		<id
            name="wordId"
            column="wordId"
            type="java.lang.Long"
            length="19"
        >
            <generator class="native"/>
        </id>
         <property
            name="wordName"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="wordName"
            length="100"
            not-null="false"
            unique="false"
        />
        <property
            name="wordDescription"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="wordDescription"
            length="65535"
            not-null="false"
            unique="false"
        />
        <property
            name="path"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="path"
            length="100"
            not-null="false"
            unique="false"
        />
        <property
            name="depth"
            type="java.lang.Long"
            update="true"
            insert="true"
            access="property"
            column="depth"
            length="19"
            not-null="true"
            unique="false"
        />
        <property
            name="parentId"
            type="java.lang.Long"
            update="true"
            insert="true"
            access="property"
            column="parentId"
            length="19"
            not-null="true"
            unique="false"
        />
        <property
            name="wordKey"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="wordKey"
            length="100"
            not-null="true"
            unique="false"
        />
        <property
            name="isWordType"
            type="java.lang.Boolean"
            update="true"
            insert="true"
            access="property"
            column="isWordType"
            length="1"
            not-null="true"
            unique="false"
        />
     </class>
</hibernate-mapping>
