					var createTime = obj.data.createTime;
					var dueTime = obj.data.dueTime;
					var creator = obj.data.creator;
					if(obj.success==true){
						this.getCmpByName('projectInfo').setTitle('项目基本信息[ '+'    任务分配时间：'+createTime+'   任务完成时限：'+dueTime+'   当前处理人：'+creator+' ]');
