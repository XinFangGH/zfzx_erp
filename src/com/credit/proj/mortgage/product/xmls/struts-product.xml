<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="product" extends="struts-default">
		<!-- 添加信息 -->
		<action name="addProduct" class="productAction" method="addProduct">
			<result>${successResultValue}</result>
		</action>
		
		<!-- 查看信息从视图 -->
		<action name="seeProduct" class="productAction" method="seeProduct"></action>
		
		<!-- 查看信息从存货商品表查询数据显示在更新页面 -->
		<action name="seeProductForUpdate" class="productAction" method="seeProductForUpdate"></action>
		
		<!-- 更新信息 -->
		<action name="updateProduct" class="productAction" method="updateProduct" ></action>
		
	</package>
</struts> 