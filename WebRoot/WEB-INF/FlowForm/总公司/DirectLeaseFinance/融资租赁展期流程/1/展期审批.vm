			businessType :'LeaseFinance'     
		});
		//租赁标的物信息
		this.LeaseObjectList = new LeaseObjectList({//readOnly:true 只查看   暂不支持查看
			projectId:this.projectId,
			readOnly:true
		});
		this.formPanel = new Ext.Panel({
			modal : true,
			labelWidth : 100,
			buttonAlign : 'center',
			layout : 'form',
			border : false,
			defaults : {
				anchor : '100%',
				xtype : 'fieldset',
				labelAlign : 'left',
				collapsible : true,
				autoHeight : true
			},
			items : [{
				xtype : 'hidden',
				name : 'preHandler',
				value : 'slSuperviseRecordService.flLeaseFinancePostponedApproveNextStep'
			},{
				xtype : 'fieldset',
				name:'projectInfo',
				title : '项目基本信息 ',
				collapsible : true,
				autoHeight : true,
				labelAlign : 'right',
				items : [this.projectInfo]
			}, {
				xtype : 'fieldset',
				title :title,
				bodyStyle : 'padding-left:0px',
				collapsible : true,
				labelAlign : 'right',
				autoHeight : true,
				items : [this.perMain]
			},{
				xtype : 'fieldset',
				title : '租赁物标的清单 ',
				collapsible : true,
				autoHeight : true,
				items : [this.LeaseObjectList]
			},{
				xtype : 'fieldset',
				title : '当前资金款项信息 ',
				collapsible : true,
				autoHeight : true,
				items : [
					new LeaseFundIntentView({
						projectId : this.leaseFinanceProjectId,
						object : this.projectInfoFinance,
						projectInfoObject : this.projectInfo,
						businessType : this.baseBusinessType,
						isHiddenAddBtn:true,
						isHiddenDelBtn:true,
						isHiddenResBtn1:true,//手动对账
						isHiddenseeqlideBtn:true,//差看单项流水记录
						isHiddenseesumqlideBtn:true,//项目总流水记录
						isHiddenExcel:true,//导出excel
						isHiddenOverdue:true,
						isHiddenseeqlideBtn:false,
						isHiddenseesumqlideBtn:false,
						isHiddenautocreateBtn : true,
						slSuperviseRecordId:this.projectId,
						isUnLoadData:false,
						isThisSuperviseRecord:'no'
					})]
			}, {       
			    xtype : 'fieldset',
				title : '展期登记信息',
				collapsible : true,
				autoHeight : true,
				items : [DeferApplyInfoPanel,
					this.slActualToCharge,
					new DZYMortgageView({
						projectId : this.leaseFinanceProjectId,
						titleText : '抵质押担保',
						businessType : this.baseBusinessType,
						isHiddenAddBtn : true,
						isHiddenDelBtn : true,
						isHiddenEdiBtn : true,
						isHiddenAddContractBtn:true,
						isHiddenDelContractBtn:true,
