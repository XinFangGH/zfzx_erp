		    	__ctxPath + '/js/customer/InvestEnterpriseView.js',
		    	__ctxPath + '/js/creditFlow/finance/SlActualToCharge.js',
		    	__ctxPath + '/js/customer/InvestEnterpriseForm.js',
		    	__ctxPath + '/js/customer/InvestPersonInfoPanelView.js',
