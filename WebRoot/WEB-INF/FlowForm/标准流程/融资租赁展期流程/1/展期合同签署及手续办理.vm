				xtype : 'hidden',
				name : 'preHandler',
				value : 'slSuperviseRecordService.flLeaseFinanceUpdateRiskDepCheckNextStep'
			},{
				xtype : 'fieldset',
				title : '租赁物标的清单 ',
				collapsible : true,
				autoHeight : true,
				items : [this.LeaseObjectList]
			},{
				xtype : 'fieldset',
				name:'projectInfo',
				title : '项目基本信息 ',
				collapsible : true,
				autoHeight : true,
				labelAlign : 'right',
				items : [this.projectInfo]
			}, {
				xtype : 'fieldset',
				title :title,
				bodyStyle : 'padding-left:0px',
				collapsible : true,
				labelAlign : 'right',
				autoHeight : true,
				items : [this.perMain]
			}, {
				xtype : 'fieldset',
				title : '当前资金款项信息 ',
				collapsible : true,
				autoHeight : true,
				items : [new SlFundIntentViewVM({
				        	isHiddenOperation : false,
							projectId : this.leaseFinanceProjectId,
							businessType : this.baseBusinessType,
							isHiddenAddBtn : true,
						    isHiddenDelBtn : true,
						    isHiddenCanBtn : true,
						    isHiddenResBtn : true,
						    isHiddenautocreateBtn:true,
							isHiddenResBtn1:true,
							isFinbtn:true,
							isHidden1:true,
						    slSuperviseRecordId : 'noid',
						    isUnLoadData :false,
							isThisSuperviseRecord :'no'
						})]
			}, {       
			    xtype : 'fieldset',
				title : '展期登记信息',
				collapsible : true,
				autoHeight : true,
				items : [DeferApplyInfoPanel,
					this.slActualToCharge,
					new DZYMortgageView({
						projectId : this.leaseFinanceProjectId,
						titleText : '抵质押担保',
						businessType : this.baseBusinessType,
						isHiddenAddContractBtn : false,
						isHiddenDelContractBtn : false,
						isHiddenEdiContractBtn : false,
						isSeeContractHidden : false,
						isHiddenRelieve:true,
						isblHidden:false,
						isRecieveHidden:true,
						isgdHidden:true,
						isHiddenAddBtn:true,
						isHiddenDelBtn:true,
						isHiddenEdiBtn:true,
						isblEdit:true,
						object:DeferApplyInfoPanel,
						isSignHidden : false,
						isqsEdit : true,
						isfwEdit : true
					}),
					new BaozMortgageView({
						projectId : this.leaseFinanceProjectId,
						titleText : '保证担保',
						businessType : this.baseBusinessType,
						isHiddenAddContractBtn : false,
						isHiddenDelContractBtn : false,
						isHiddenEdiContractBtn : false,
						isSeeContractHidden:false,
						isHiddenRelieve:true,
						isRecieveHidden:true,
						isHiddenAddBtn:true,
						isHiddenDelBtn:true,
						isHiddenEdiBtn:true,
						isblHidden:false,
