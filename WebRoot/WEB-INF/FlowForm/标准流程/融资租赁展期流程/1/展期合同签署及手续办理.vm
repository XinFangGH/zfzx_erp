	constructPanel : function() {
		this.perMain = "";
		this.projectInfo = new EnterpriseBusinessProjectInfoPanel({
			   isDiligenceReadOnly : true,
			   isAllReadOnly:true,
			   isMineNameEditable:false
		});
	
