<?xml version="1.0" encoding="UTF-8"?>
<jbpm-configuration spring="enabled">
  <process-engine-context>
    <command-service name="newTxRequiredCommandService">
      <retry-interceptor />
      <environment-interceptor policy="requiresNew" />
      <spring-transaction-interceptor transaction-manager="txManager" policy="requiresNew" />
    </command-service>
    
    <!-- Default command service has a Spring transaction interceptor-->
    <command-service name="txRequiredCommandService">
      <retry-interceptor />
      <environment-interceptor />
      <spring-transaction-interceptor transaction-manager="txManager" />
    </command-service>

  </process-engine-context>

  <transaction-context>
    <transaction type="spring" />
    <hibernate-session current="true" />
  </transaction-context>

</jbpm-configuration>
