<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class
        name="com.zhiwei.credit.model.p2p.article.Article"
        table="p2p_article"
        select-before-update="false"
        dynamic-update="false"
        dynamic-insert="false"
        optimistic-lock="version"
    >
		<id
            name="id"
            column="id"
            type="java.lang.Long"
            length="19"
        >
            <generator class="native"/>
        </id>
         <property
            name="createDate"
            type="java.util.Date"
            update="true"
            insert="true"
            access="property"
            column="createDate"
            length="19"
            not-null="false"
            unique="false"
        />
        <property name="single" type="java.lang.Integer" update="true"
			insert="true" access="property" column="single" length="10"
			not-null="true" unique="false" />
        <property
            name="modifyDate"
            type="java.util.Date"
            update="true"
            insert="true"
            access="property"
            column="modifyDate"
            length="19"
            not-null="false"
            unique="false"
        />
        <property
            name="author"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="author"
            length="255"
            not-null="false"
            unique="false"
        />
        
        <property
            name="themeFtpUrl"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="themeFtpUrl"
            length="255"
            not-null="false"
            unique="false"
        />
        
        <property
            name="content"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="content"
            length="65535"
            not-null="true"
            unique="false"
        />
          <property
            name="col"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="col"
            length="50"
            not-null="false"
            unique="false"
        />
        
        
        <property
            name="hits"
            type="java.lang.Integer"
            update="true"
            insert="true"
            access="property"
            column="hits"
            length="10"
            not-null="true"
            unique="false"
        />
        <property
            name="htmlFilePath"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="htmlFilePath"
            length="255"
            not-null="false"
            unique="false"
        />
        <property
            name="isPublication"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="isPublication"
            length="1"
            not-null="true"
            unique="false"
        />
        <property
            name="isRecommend"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="isRecommend"
            length="1"
            not-null="true"
            unique="false"
        />
        <property
            name="isTop"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="isTop"
            length="1"
            not-null="true"
            unique="false"
        />
        <property
            name="metaDescription"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="metaDescription"
            length="65535"
            not-null="false"
            unique="false"
        />
        <property
            name="metaKeywords"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="metaKeywords"
            length="65535"
            not-null="false"
            unique="false"
        />
        <property
            name="pageCount"
            type="java.lang.Integer"
            update="true"
            insert="true"
            access="property"
            column="pageCount"
            length="10"
            not-null="true"
            unique="false"
        />
        <property
            name="title"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="title"
            length="255"
            not-null="true"
            unique="false"
        />
     <!-- imported bi-directional many-to-one association to Articlecategory -->
		<many-to-one
			name="articlecategory"
			class="com.zhiwei.credit.model.p2p.article.Articlecategory"
            not-null="false"
			fetch="select"
		>	
			<column name="articleCategory_id" />
		</many-to-one>
    </class>
</hibernate-mapping>
