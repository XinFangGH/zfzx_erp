		var signValue = this.getCmpByName('signValue');
		var flag="";
		signValue.eachItem(function(item){  
		    if(item.checked){
		    	if(item.inputValue==4||item.inputValue=="4"){
		    		flag="4";
		    	}
		    }
		}); 
		if(flag=="4"){
    		if(comments!=null&&comments!=""){
